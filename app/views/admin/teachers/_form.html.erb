<%= form_with(model: [:admin, teacher], class: "space-y-6") do |f| %>
  <div>
    <%= f.label :name, class: "block text-sm font-bold text-stone-700 mb-2" %>
    <%= f.text_field :name, class: "w-full px-4 py-3 rounded-xl border border-stone-200 focus:ring-2 focus:ring-amber-500 outline-none" %>
  </div>

  <div>
    <%= f.label :subject_id, "Assigned Subject", class: "block text-sm font-bold text-stone-700 mb-2" %>
    <%= f.collection_select :subject_id, Subject.all, :id, :name, { prompt: "Select Subject" }, { class: "w-full px-4 py-3 rounded-xl border border-stone-200 focus:ring-2 focus:ring-amber-500" } %>
  </div>

  <div>
    <%= f.submit class: "bg-amber-600 text-white px-8 py-3 rounded-xl font-bold hover:bg-amber-700 cursor-pointer transition" %>
  </div>
<% end %>