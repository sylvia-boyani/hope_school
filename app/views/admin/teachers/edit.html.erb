<div class="min-h-screen bg-stone-50/50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-black text-stone-900 tracking-tight">Edit Teacher Profile</h1>
        <p class="text-stone-500 mt-1">Updating <span class="text-amber-600 font-semibold"><%= @teacher.name %></span></p>
      </div>
      <%= link_to admin_teachers_path, class: "text-stone-400 hover:text-stone-600 transition" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      <% end %>
    </div>

    <%# This line pulls in the code from _form.html.erb %>
    <%= render "form", teacher: @teacher %>

    <div class="mt-12 p-8 bg-red-50/50 rounded-[2.5rem] border border-red-100 flex flex-col md:flex-row items-center justify-between gap-6">
      <div>
        <h3 class="text-red-800 font-bold text-lg">Danger Zone</h3>
        <p class="text-red-600/70 text-sm">Removing this teacher will also delete their assignments.</p>
      </div>

      <%= button_to admin_teacher_path(@teacher), 
          method: :delete, 
          data: { turbo_confirm: "Are you absolutely sure?" }, 
          class: "bg-white text-red-600 px-8 py-3 rounded-xl font-bold border border-red-200 hover:bg-red-600 hover:text-white transition-all shadow-sm" do %>
        Delete Teacher Account
      <% end %>
    </div>

  </div>
</div>