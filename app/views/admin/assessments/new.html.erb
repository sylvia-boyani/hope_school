<div class="p-8 max-w-5xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-stone-900">New Assessment</h1>
      <p class="text-stone-500 font-medium">Capture learner's performance for CBC Learning Areas</p>
    </div>
  </div>

  <%# Selection Area %>
  <%= form_with url: new_admin_assessment_path, method: :get, local: true, class: "mb-8 bg-white p-6 rounded-3xl border border-stone-100 shadow-sm flex flex-wrap gap-4 items-end" do |f| %>
    <div class="flex-1 min-w-[200px]">
      <%= f.label :level_id, "Grade Level", class: "block text-xs font-bold text-stone-400 uppercase mb-2" %>
      <%= f.collection_select :level_id, @levels, :id, :name, { prompt: "Select Grade", selected: params[:level_id] }, 
          { class: "w-full border-stone-200 rounded-xl focus:ring-amber-500", onchange: "this.form.submit();" } %>
    </div>
    <p class="text-stone-300 pb-3">Selection filters list below</p>
  <% end %>

  <% if @level %>
    <%= form_with url: admin_assessments_path, method: :post, local: true do |f| %>
      <%= hidden_field_tag :level_id, @level.id %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <div>
          <%= f.label :subject_id, "Learning Area", class: "block text-sm font-bold text-stone-700 mb-2" %>
          <%= f.collection_select :subject_id, @subjects, :id, :name, { prompt: "Choose Subject" }, 
              { class: "w-full border-stone-200 rounded-xl py-3 focus:ring-amber-500", required: true } %>
        </div>
        <div>
          <%= f.label :term, "Reporting Term", class: "block text-sm font-bold text-stone-700 mb-2" %>
          <%= f.select :term, ["Term 1", "Term 2", "Term 3"], { prompt: "Select Term" }, 
              { class: "w-full border-stone-200 rounded-xl py-3 focus:ring-amber-500", required: true } %>
        </div>
      </div>

      <div class="bg-white rounded-[2rem] shadow-sm border border-stone-100 overflow-hidden mb-8">
        <table class="w-full">
          <thead class="bg-stone-50 text-left">
            <tr>
              <th class="p-5 text-xs font-bold uppercase text-stone-400">Learner Name</th>
              <th class="p-5 text-xs font-bold uppercase text-stone-400">Performance Level</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-stone-50">
            <% @students.each do |student| %>
              <tr>
                <td class="p-5">
                  <span class="font-bold text-stone-800"><%= student.first_name %> <%= student.last_name %></span>
                  <p class="text-xs text-stone-400">ADM: <%= student.admission_number %></p>
                </td>
                <td class="p-5">
                  <%# Note the name: assessments[student_id][status] %>
                  <%= select_tag "assessments[#{student.id}][status]", 
                      options_for_select(Assessment::PERFORMANCE_LEVELS), 
                      include_blank: "Pending Assessment...",
                      class: "w-full border-stone-200 rounded-xl text-sm focus:ring-amber-500" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="flex justify-end gap-4">
        <%= link_to "Cancel", admin_assessments_path, class: "px-8 py-4 font-bold text-stone-400" %>
        <%= f.submit "Save Class Record", class: "bg-stone-900 text-white px-10 py-4 rounded-2xl font-bold hover:bg-stone-800 shadow-lg cursor-pointer" %>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-20 bg-stone-50 rounded-[3rem] border-2 border-dashed border-stone-200">
      <p class="text-stone-400 font-medium text-lg">Please select a Grade Level above to begin assessment.</p>
    </div>
  <% end %>
</div>