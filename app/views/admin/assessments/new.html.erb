<div class="max-w-2xl mx-auto py-8">
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-800">New Assessment</h1>
    <%= link_to "Cancel", admin_assessments_path, class: "text-gray-500 hover:text-gray-700 font-medium" %>
  </div>

  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
    <%= form_with(model: [:admin, @assessment], local: true, class: "space-y-6") do |f| %>
      
      <div>
        <%= f.label :student_id, "Student Name", class: "block text-sm font-semibold text-gray-700 mb-2" %>
        <%= f.collection_select :student_id, @students, :id, :name, { prompt: "Choose a student..." }, 
            { class: "w-full rounded-xl border-gray-300 focus:ring-2 focus:ring-teal-500 focus:border-teal-500 p-3 shadow-sm transition" } %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= f.label :subject_id, "Subject", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.collection_select :subject_id, @subjects, :id, :name, { prompt: "Select subject" }, 
              { class: "w-full rounded-xl border-gray-300 focus:ring-2 focus:ring-teal-500 p-3 shadow-sm" } %>
        </div>

        <div>
          <%= f.label :assessment_date, "Date of Assessment", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.date_field :assessment_date, value: Date.today, 
              class: "w-full rounded-xl border-gray-300 focus:ring-2 focus:ring-teal-500 p-3 shadow-sm" %>
        </div>

        <div>
          <%= f.label :level_id, "Grade Level", class: "block text-sm font-semibold text-gray-700 mb-2" %>
          <%= f.collection_select :level_id, @levels, :id, :name, { prompt: "Select Level" }, 
      { class: "w-full rounded-xl border-gray-300 focus:ring-2 focus:ring-teal-500 p-3 shadow-sm" } %>
        </div>
      </div>

      <div>
        <%= f.label :performance_level, "CBC Rating", class: "block text-sm font-semibold text-gray-700 mb-2" %>
        <%= f.select :performance_level, [["Exceeding Expectations (EE)", "EE"], ["Meeting Expectations (ME)", "ME"], ["Approaching Expectations (AE)", "AE"], ["Below Expectations (BE)", "BE"]], { prompt: "Select performance level" }, 
            { class: "w-full rounded-xl border-gray-300 focus:ring-2 focus:ring-teal-500 p-3 shadow-sm" } %>
      </div>

      <div class="pt-6">
        <%= f.submit "Save Assessment", 
            class: "w-full bg-teal-600 text-white py-4 rounded-xl font-bold hover:bg-teal-700 transition shadow-lg shadow-teal-100 cursor-pointer text-lg" %>
      </div>
    <% end %>
  </div>
</div>