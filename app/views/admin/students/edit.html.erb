<%= form_with(model: [:admin, @student], class: "space-y-8 bg-white p-10 rounded-[2.5rem] shadow-sm border border-stone-100") do |f| %>
  
  <%# 1. Error Display %>
  <% if @student.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded-r-xl">
      <h2 class="text-red-800 font-bold text-sm">Please fix the following errors:</h2>
      <ul class="text-red-700 text-xs list-disc ml-5 mt-1">
        <% @student.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h1 class="text-2xl font-bold mb-6">Edit Student Profile</h1>

  <%# 2. Photo Upload Section %>
  <div class="flex items-center space-x-6 pb-6 border-b border-stone-50">
    <div class="shrink-0">
      <% if @student.photo.attached? %>
        <%= image_tag @student.photo_thumbnail, class: "h-20 w-20 object-cover rounded-2xl ring-4 ring-stone-50" %>
      <% else %>
        <div class="h-20 w-20 rounded-2xl bg-stone-100 flex items-center justify-center text-stone-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
      <% end %>
    </div>
    <label class="block">
      <span class="sr-only">Choose student photo</span>
      <%= f.file_field :photo, class: "block w-full text-sm text-stone-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-amber-50 file:text-amber-700 hover:file:bg-amber-100 transition-all cursor-pointer" %>
    </label>
  </div>

  <%# 3. Basic Information %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :first_name, class: "block text-xs font-bold uppercase text-stone-500 mb-2 ml-1" %>
      <%= f.text_field :first_name, placeholder: "e.g. Sylvia", class: "w-full px-4 py-3 rounded-xl border border-stone-200 focus:ring-2 focus:ring-amber-500 outline-none transition-all placeholder:text-stone-300" %>
    </div>

    <div>
      <%= f.label :last_name, class: "block text-xs font-bold uppercase text-stone-500 mb-2 ml-1" %>
      <%= f.text_field :last_name, placeholder: "e.g. Boyani", class: "w-full px-4 py-3 rounded-xl border border-stone-200 focus:ring-2 focus:ring-amber-500 outline-none transition-all placeholder:text-stone-300" %>
    </div>
  </div>

  <%# 4. Identification & Gender %>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="md:col-span-1">
      <%= f.label :admission_number, class: "block text-xs font-bold uppercase text-stone-500 mb-2 ml-1" %>
      <%= f.text_field :admission_number, placeholder: "1234", class: "w-full px-4 py-3 rounded-xl border border-stone-200 focus:ring-2 focus:ring-amber-500 outline-none transition-all" %>
    </div>

    <div class="md:col-span-1">
      <%= f.label :date_of_birth, class: "block text-xs font-bold uppercase text-stone-500 mb-2 ml-1" %>
      <%= f.date_field :date_of_birth, class: "w-full px-4 py-3 rounded-xl border border-stone-200 focus:ring-2 focus:ring-amber-500 outline-none transition-all" %>
    </div>

    <div class="md:col-span-1">
      <%= f.label :gender, class: "block text-xs font-bold uppercase text-stone-500 mb-2 ml-1" %>
      <%= f.select :gender, ["Male", "Female", "Other"], { prompt: "Select Gender" }, { class: "w-full px-4 py-3 rounded-xl border border-stone-200 focus:ring-2 focus:ring-amber-500 outline-none transition-all bg-white" } %>
    </div>
  </div>

  <%# 5. Placement Selection %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :level_id, "Grade Level", class: "block text-xs font-bold uppercase text-stone-500 mb-2 ml-1" %>
      <%= f.collection_select :level_id, Level.all, :id, :name, { prompt: "Select Grade" }, { class: "w-full px-4 py-3 rounded-xl border border-stone-200 focus:ring-2 focus:ring-amber-500 outline-none transition-all bg-white" } %>
    </div>

    <div>
  <%= f.label :class_room_id, "Classroom / Stream", class: "block text-xs font-bold uppercase text-stone-500 mb-2 ml-1" %>
  
  <%# We filter ClassRooms to only those belonging to this student's level %>
  <% selected_level_id = @student.class_room&.level_id %>
<% available_streams = selected_level_id ? ClassRoom.where(level_id: selected_level_id) : ClassRoom.all %>
  
  <%= f.collection_select :class_room_id, 
      available_streams, 
      :id, :stream, 
      { prompt: "Select Stream" }, 
      { class: "w-full px-4 py-3 rounded-xl border border-stone-200 focus:ring-2 focus:ring-amber-500 outline-none transition-all bg-white" } %>
</div>
  </div>

  <%# 6. Action Button %>
  <div class="pt-6 border-t border-stone-50 flex items-center justify-between">
    <p class="text-xs text-stone-400 italic">* All fields except Classroom are required.</p>
    <%= f.submit @student.new_record? ? "Register Student" : "Update Profile", class: "bg-stone-900 text-white px-10 py-4 rounded-2xl font-bold hover:bg-stone-800 transition-all cursor-pointer shadow-lg shadow-stone-200" %>
  </div>

<% end %>

<%# 7. Danger Zone / Delete Section %>
<% unless @student.new_record? %>
  <div class="mt-8 bg-red-50 p-8 rounded-[2.5rem] border border-red-100 flex items-center justify-between">
    <div>
      <h3 class="text-red-800 font-bold">Danger Zone</h3>
      <p class="text-red-600 text-sm">Once you delete a student, there is no going back. Please be certain.</p>
    </div>
    
    <%= button_to "Delete Student", 
        admin_student_path(@student), 
        method: :delete, 
        form: { data: { confirm: "Are you absolutely sure? This action cannot be undone." } },
        class: "bg-red-600 text-white px-6 py-3 rounded-xl font-bold hover:bg-red-700 transition-all shadow-sm" %>
  </div>
<% end %>