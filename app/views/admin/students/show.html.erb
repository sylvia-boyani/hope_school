<div class="p-8 max-w-5xl mx-auto">
  <%# Navigation Header %>
  <div class="flex items-center justify-between mb-8">
    <%= link_to admin_students_path, class: "group flex items-center text-stone-500 hover:text-stone-800 transition-all" do %>
      <div class="p-2 bg-white rounded-lg border border-stone-200 group-hover:border-stone-400 mr-3">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
      </div>
      <span class="font-bold">Back to Registry</span>
    <% end %>
    
    <div class="flex items-center space-x-3">
      <%# Delete Button %>
      <%= link_to admin_student_path(@student), 
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to permanently remove #{@student.first_name}?" }, 
                  class: "px-4 py-2 bg-red-50 text-red-600 rounded-xl font-bold hover:bg-red-100 transition-all text-sm flex items-center" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Delete
      <% end %>

      <%= link_to "Edit Student", edit_admin_student_path(@student), class: "px-6 py-2 bg-stone-100 text-stone-700 rounded-xl font-bold hover:bg-stone-200 transition-all text-sm" %>
      <button class="px-6 py-2 bg-stone-900 text-white rounded-xl font-bold hover:bg-stone-800 transition-all text-sm">Print ID Card</button>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <%# Profile Card (Sidebar) %>
    <div class="lg:col-span-1">
      <div class="bg-white rounded-[2.5rem] p-8 shadow-sm border border-stone-100 text-center sticky top-8">
        <div class="relative inline-block mb-6">
          <% if @student.photo.attached? %>
            <%= image_tag @student.photo, class: "w-40 h-40 rounded-[2rem] object-cover ring-8 ring-stone-50 shadow-inner" %>
          <% else %>
            <div class="w-40 h-40 rounded-[2rem] bg-amber-50 text-amber-600 flex items-center justify-center text-5xl font-bold ring-8 ring-stone-50">
              <%= @student.first_name[0] %><%= @student.last_name[0] %>
            </div>
          <% end %>
          <div class="absolute -bottom-2 -right-2 bg-green-500 w-6 h-6 rounded-full border-4 border-white"></div>
        </div>

        <h2 class="text-2xl font-bold text-stone-900"><%= @student.first_name %> <%= @student.last_name %></h2>
        <p class="text-amber-600 font-mono text-sm font-bold mb-6">ID: <%= @student.admission_number %></p>
        
        <div class="grid grid-cols-2 gap-2">
          <div class="p-3 bg-stone-50 rounded-2xl text-center">
            <span class="block text-[10px] uppercase font-bold text-stone-400">Grade</span>
            <span class="text-sm font-bold text-stone-700"><%= @student.level&.name || "N/A" %></span>
          </div>
          <div class="p-3 bg-stone-50 rounded-2xl text-center">
            <span class="block text-[10px] uppercase font-bold text-stone-400">Stream</span>
            <span class="text-sm font-bold text-stone-700"><%= @student.class_room&.name || "N/A" %></span>
          </div>
        </div>
      </div>
    </div>

    <%# Main Content Area %>
    <div class="lg:col-span-2 space-y-6">
      <div class="bg-white rounded-[2.5rem] p-10 shadow-sm border border-stone-100">
        <h3 class="text-lg font-bold text-stone-900 mb-8 flex items-center">
          <span class="w-8 h-8 bg-stone-900 text-white rounded-lg flex items-center justify-center mr-3 text-xs">01</span>
          Personal Biography
        </h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-y-8 gap-x-12">
          <div class="border-b border-stone-50 pb-4">
            <label class="block text-xs font-bold uppercase text-stone-400 mb-2">Full Name</label>
            <p class="text-stone-800 font-medium"><%= @student.first_name %> <%= @student.last_name %></p>
          </div>
          
          <div class="border-b border-stone-50 pb-4">
            <label class="block text-xs font-bold uppercase text-stone-400 mb-2">Gender</label>
            <p class="text-stone-800 font-medium"><%= @student.gender || "Not Specified" %></p>
          </div>

          <div class="border-b border-stone-50 pb-4">
            <label class="block text-xs font-bold uppercase text-stone-400 mb-2">Date of Birth</label>
            <p class="text-stone-800 font-medium"><%= @student.date_of_birth&.strftime("%B %d, %Y") || "No date set" %></p>
          </div>

          <div class="border-b border-stone-50 pb-4">
            <label class="block text-xs font-bold uppercase text-stone-400 mb-2">Age</label>
            <p class="text-stone-800 font-medium">
              <% if @student.date_of_birth %>
                <%= ((Time.zone.now - @student.date_of_birth.to_time) / 1.year.seconds).floor %> Years Old
              <% else %>
                Unknown
              <% end %>
            </p>
          </div>
        </div>
      </div>
      
      <%# Secondary Card %>
      <div class="bg-stone-900 rounded-[2.5rem] p-10 shadow-xl text-white">
        <h3 class="text-lg font-bold mb-4">Academic Status</h3>
        <p class="text-stone-400 text-sm leading-relaxed">
          Currently enrolled in <%= @student.level&.name %> under the <%= @student.class_room&.name || "General" %> stream. No disciplinary actions or attendance warnings on file.
        </p>
      </div>
    </div>
  </div>
</div>