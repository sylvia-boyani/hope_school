<div class="p-8 max-w-7xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-stone-900">Student Registry</h1>
      <p class="text-stone-500">Managing all enrolled students at Hope School</p>
    </div>
    <%= link_to new_admin_student_path, class: "bg-amber-600 hover:bg-amber-700 text-white px-6 py-3 rounded-2xl font-bold flex items-center transition-all shadow-lg shadow-amber-100" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
      </svg>
      Add New Student
    <% end %>
  </div>

  <div class="bg-white rounded-[2rem] shadow-sm border border-stone-200 overflow-hidden">
    <table class="w-full text-left border-collapse">
      <thead>
        <tr class="bg-stone-50 border-b border-stone-100">
          <th class="p-5 text-xs font-bold uppercase text-stone-400">Student</th>
          <th class="p-5 text-xs font-bold uppercase text-stone-400">Adm No.</th>
          <th class="p-5 text-xs font-bold uppercase text-stone-400">Grade & Stream</th>
          <th class="p-5 text-xs font-bold uppercase text-stone-400">Gender</th>
          <th class="p-5 text-xs font-bold uppercase text-stone-400 text-right">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-stone-50">
        <% @students.each do |student| %>
          <tr class="hover:bg-stone-50/50 transition-colors">
            <td class="p-5">
              <div class="flex items-center">
                <% if student.photo.attached? %>
                  <%= image_tag student.photo, class: "w-10 h-10 rounded-full object-cover mr-3 ring-2 ring-stone-100" %>
                <% else %>
                  <div class="w-10 h-10 rounded-full bg-amber-100 text-amber-700 flex items-center justify-center font-bold mr-3">
                    <%= student.first_name[0] %><%= student.last_name[0] %>
                  </div>
                <% end %>
                <div>
                  <div class="font-bold text-stone-800"><%= student.first_name %> <%= student.last_name %></div>
                  <div class="text-xs text-stone-400">Joined <%= student.created_at.strftime("%b %Y") %></div>
                </div>
              </div>
            </td>
            <td class="p-5 font-mono text-sm text-stone-600">#<%= student.admission_number %></td>
            <td class="p-5">
              <div class="text-sm font-semibold text-stone-800"><%= student.level&.name %></div>
              <div class="text-xs text-stone-500"><%= student.class_room&.name || "Unassigned Stream" %></div>
            </td>
            <td class="p-5 text-sm text-stone-600"><%= student.gender %></td>
            <td class="p-5 text-right space-x-2">
              <%= link_to "View", admin_student_path(student), class: "inline-flex items-center px-3 py-1 bg-stone-100 text-stone-700 rounded-lg text-xs font-bold hover:bg-stone-200 transition-all" %>
              <%= link_to "Edit", edit_admin_student_path(student), class: "inline-flex items-center px-3 py-1 bg-amber-50 text-amber-700 rounded-lg text-xs font-bold hover:bg-amber-100 transition-all" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <% if @students.empty? %>
      <div class="p-20 text-center">
        <div class="text-stone-300 mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </div>
        <p class="text-stone-500 font-medium">No students registered yet.</p>
      </div>
    <% end %>
  </div>
</div>