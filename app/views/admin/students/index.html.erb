<div class="p-8 bg-stone-50 min-h-screen">
  <div class="flex justify-between items-center mb-10">
    <div>
      <h1 class="text-4xl font-black text-stone-900 tracking-tight">Student Registry</h1>
      <p class="text-stone-500 mt-1">Manage enrollments and grade assignments.</p>
    </div>
    <%= link_to 'Add New Student', new_admin_student_path, class: "bg-amber-600 hover:bg-amber-700 text-white px-6 py-3 rounded-2xl font-bold shadow-lg shadow-amber-200 transition-all flex items-center gap-2" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-white p-6 rounded-[2rem] border border-stone-200 shadow-sm">
      <span class="text-xs font-bold uppercase tracking-widest text-stone-400">Total Enrollment</span>
      <p class="text-3xl font-black text-stone-900 mt-1"><%= @students.count %></p>
    </div>
  </div>

  <div class="bg-white rounded-[2.5rem] border border-stone-200 shadow-sm overflow-hidden">
    <table class="w-full text-left border-collapse">
      <thead>
        <tr class="bg-stone-900 text-white">
          <th class="p-5 font-bold uppercase text-xs tracking-widest">Adm No.</th>
          <th class="p-5 font-bold uppercase text-xs tracking-widest">Full Name</th>
          <th class="p-5 font-bold uppercase text-xs tracking-widest">Grade/Level</th>
          <th class="p-5 font-bold uppercase text-xs tracking-widest text-right">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-stone-100">
        <% @students.each do |student| %>
          <tr class="hover:bg-amber-50/50 transition-colors group">
            <td class="p-5 font-mono text-sm text-stone-500">
              #<%= student.admission_no %>
            </td>
            <td class="p-5">
              <span class="font-bold text-stone-800 text-lg group-hover:text-amber-700"><%= student.name %></span>
            </td>
            <td class="p-5">
              <span class="px-4 py-1.5 bg-stone-100 text-stone-600 rounded-full text-xs font-black uppercase border border-stone-200">
                <%= student.level&.name || "Unassigned" %>
              </span>
            </td>
            <td class="p-5 text-right space-x-2">
              <%= link_to 'View', admin_student_path(student), class: "text-stone-400 hover:text-stone-900 font-bold text-sm transition" %>
              <%= link_to 'Edit', edit_admin_student_path(student), class: "text-amber-600 hover:text-amber-800 font-bold text-sm transition" %>
              <%= link_to 'Remove', admin_student_path(student), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "text-red-400 hover:text-red-600 font-bold text-sm transition" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @students.empty? %>
      <div class="p-20 text-center">
        <p class="text-stone-400 italic">No students registered yet. Click the button above to start.</p>
      </div>
    <% end %>
  </div>
</div>