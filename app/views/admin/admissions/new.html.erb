<%= form_with(model: [:admin, @admission], class: "space-y-6 bg-white p-8 rounded-[2rem] shadow-sm border border-stone-100") do |f| %>
  
  <%# 1. Error Handling %>
  <% if @admission.errors.any? %>
    <div class="bg-red-50 p-4 rounded-xl mb-6 text-red-700 border border-red-200">
      <h3 class="font-bold">Please fix the following:</h3>
      <ul class="list-disc ml-5 text-sm">
        <% @admission.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h1 class="text-2xl font-bold text-stone-900 mb-6">New Admission Entry</h1>

  <%# 2. Photo Section %>
  <div class="flex items-center space-x-6 pb-6 border-b border-stone-50">
    <div class="shrink-0">
      <% if @admission.respond_to?(:photo) && @admission.photo.attached? %>
        <%= image_tag @admission.photo_thumbnail, class: "h-20 w-20 object-cover rounded-2xl ring-4 ring-stone-50 shadow-sm" %>
      <% else %>
        <div class="h-20 w-20 rounded-2xl bg-stone-100 flex items-center justify-center text-stone-400 border-2 border-dashed border-stone-200">
          <i class="fa-solid fa-camera text-2xl"></i>
        </div>
      <% end %>
    </div>
    <label class="block">
      <span class="block text-sm font-bold text-stone-700 mb-1">Upload Identification Photo</span>
      <%= f.file_field :photo, class: "block w-full text-xs text-stone-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-xs file:font-semibold file:bg-amber-50 file:text-amber-700 hover:file:bg-amber-100 transition-all cursor-pointer" %>
    </label>
  </div>

  <%# 3. Personal Info Grid %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :first_name, class: "block text-sm font-bold text-stone-700 mb-2" %>
      <%= f.text_field :first_name, placeholder: "First Name", class: "w-full px-4 py-3 rounded-xl border border-stone-200 focus:ring-2 focus:ring-amber-500 outline-none" %>
    </div>

    <div>
      <%= f.label :last_name, class: "block text-sm font-bold text-stone-700 mb-2" %>
      <%= f.text_field :last_name, placeholder: "Last Name", class: "w-full px-4 py-3 rounded-xl border border-stone-200 focus:ring-2 focus:ring-amber-500 outline-none" %>
    </div>
  </div>

  <%# 4. Academic Info Grid %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :admission_number, "Temporary ID/Admission No.", class: "block text-sm font-bold text-stone-700 mb-2" %>
      <%= f.text_field :admission_number, class: "w-full px-4 py-3 rounded-xl border border-stone-200 focus:ring-2 focus:ring-amber-500 outline-none" %>
    </div>

    <div>
      <%= f.label :level_id, "Target Grade/Level", class: "block text-sm font-bold text-stone-700 mb-2" %>
      <%= f.collection_select :level_id, Level.all, :id, :name, { prompt: "Select Level" }, { class: "w-full px-4 py-3 rounded-xl border border-stone-200 focus:ring-2 focus:ring-amber-500 outline-none bg-white" } %>
    </div>
  </div>

  <%# 5. Background Info Grid %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :date_of_birth, class: "block text-sm font-bold text-stone-700 mb-2" %>
      <%= f.date_field :date_of_birth, class: "w-full px-4 py-3 rounded-xl border border-stone-200 focus:ring-2 focus:ring-amber-500 outline-none" %>
    </div>

    <div>
      <%= f.label :gender, class: "block text-sm font-bold text-stone-700 mb-2" %>
      <%= f.select :gender, ["Male", "Female", "Other"], { prompt: "Select Gender" }, { class: "w-full px-4 py-3 rounded-xl border border-stone-200 focus:ring-2 focus:ring-amber-500 outline-none bg-white" } %>
    </div>
  </div>

  <%# 6. Action Bar %>
  <div class="pt-6 border-t border-stone-50 flex items-center justify-between">
    <p class="text-xs text-stone-400 italic">This will create a new admission record for review.</p>
    <%= f.submit @admission.new_record? ? "Complete Admission" : "Update Record", 
        class: "w-full md:w-auto bg-stone-900 text-white px-10 py-4 rounded-2xl font-bold hover:bg-stone-800 transition-all cursor-pointer shadow-lg shadow-stone-200" %>
  </div>

<% end %>