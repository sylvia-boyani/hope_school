<%= form_with(model: [:admin, @admission], class: "space-y-6 bg-white p-8 rounded-[2rem] shadow-sm border border-stone-100") do |f| %>
  
  <% if @admission.errors.any? %>
    <div class="bg-red-50 p-4 rounded-xl mb-6 text-red-700 border border-red-200">
      <h3 class="font-bold">Please fix the following:</h3>
      <ul class="list-disc ml-5">
        <% @admission.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h1 class="text-2xl font-bold mb-6"><%= @admission.new_record? ? "New Admission" : "Edit Admission: #{@admission.student_name}" %></h1>

  <%# Photo Upload Section %>
  <div class="flex items-center space-x-6 pb-6 border-b border-stone-50">
    <div class="shrink-0">
      <% if @admission.photo.attached? %>
        <%= image_tag @admission.photo, class: "h-20 w-20 object-cover rounded-2xl ring-4 ring-stone-50 shadow-sm" %>
      <% else %>
        <div class="h-20 w-20 rounded-2xl bg-stone-100 flex items-center justify-center text-stone-400 border-2 border-dashed border-stone-200">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 00-2 2z" />
          </svg>
        </div>
      <% end %>
    </div>
    <label class="block">
      <span class="block text-sm font-bold text-stone-700 mb-1">Student Photograph</span>
      <%= f.file_field :photo, class: "block w-full text-xs text-stone-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-xs file:font-semibold file:bg-amber-50 file:text-amber-700 hover:file:bg-amber-100 transition-all cursor-pointer" %>
    </label>
  </div>

  <%# Personal Details Grid %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :first_name, class: "block text-sm font-bold text-stone-700 mb-2" %>
      <%= f.text_field :first_name, class: "w-full px-4 py-3 rounded-xl border border-stone-200 focus:ring-2 focus:ring-amber-500 outline-none" %>
    </div>

    <div>
      <%= f.label :last_name, class: "block text-sm font-bold text-stone-700 mb-2" %>
      <%= f.text_field :last_name, class: "w-full px-4 py-3 rounded-xl border border-stone-200 focus:ring-2 focus:ring-amber-500 outline-none" %>
    </div>
  </div>

  <%# Status Dropdown - This is the key part you requested %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= f.label :status, "Current Admission Status", class: "block text-sm font-bold text-stone-700 mb-2" %>
      <%= f.select :status, [
        ['Pending - Awaiting Review', 'pending'],
        ['Interview - Scheduled', 'interview'],
        ['Approved - Ready for Enrollment', 'approved'],
        ['Enrolled - Admitted to School', 'enrolled'],
        ['Rejected - Application Declined', 'rejected']
      ], {}, { class: "w-full px-4 py-3 rounded-xl border border-stone-200 focus:ring-2 focus:ring-amber-500 outline-none bg-white shadow-sm" } %>
    </div>

    <div>
      <%= f.label :level_id, "Target Grade/Level", class: "block text-sm font-bold text-stone-700 mb-2" %>
      <%= f.collection_select :level_id, Level.all, :id, :name, { prompt: "Select Level" }, { class: "w-full px-4 py-3 rounded-xl border border-stone-200 focus:ring-2 focus:ring-amber-500 outline-none bg-white" } %>
    </div>
  </div>

  <%# Action Bar %>
  <div class="pt-4 border-t border-stone-50 flex items-center justify-between">
    <p class="text-xs text-stone-400 italic">Updating the status will reflect on the admin dashboard.</p>
    <%= f.submit @admission.new_record? ? "Create Admission" : "Update Admission Record", 
        class: "w-full md:w-auto bg-stone-900 text-white px-10 py-4 rounded-2xl font-bold hover:bg-stone-800 transition-all cursor-pointer shadow-lg shadow-stone-200" %>
  </div>

<% end %>