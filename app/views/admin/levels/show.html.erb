<div class="p-8 max-w-4xl mx-auto">
  <h1 class="text-3xl font-bold mb-2"><%= @level.name %> Settings</h1>
  <p class="text-stone-500 mb-8">Select the CBC subjects taught in this level.</p>

  <%= form_with url: update_subjects_admin_level_path(@level), method: :patch do |f| %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <% Subject.all.each do |subject| %>
        <label class="flex items-center p-4 bg-white border border-stone-200 rounded-2xl cursor-pointer hover:border-amber-400 transition-all">
          <%= check_box_tag "subject_ids[]", subject.id, @level.subject_ids.include?(subject.id), class: "w-5 h-5 text-amber-600 rounded border-stone-300 focus:ring-amber-500" %>
          <div class="ml-4">
            <span class="block font-bold text-stone-800"><%= subject.name %></span>
            <span class="text-xs text-stone-400 uppercase"><%= subject.category %></span>
          </div>
        </label>
      <% end %>
    </div>

    <div class="mt-8">
      <%= f.submit "Save Subject Load", class: "bg-stone-900 text-white px-8 py-3 rounded-xl font-bold hover:bg-stone-800 cursor-pointer" %>
    </div>
  <% end %>
</div>